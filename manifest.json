

{
  "manifest_version": 2,
  "name": "ILL-Helper",
  "version": "1.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "{bd02b78b-67b8-4037-9d8d-cc35dcfae761}"
    }
  },

  "description": "An extension to collect the list of possible lenders from a worldcat page.",
  "homepage_url": "https://github.com/gabei/ILL-helper",

  "icons": {
    "50": "icons/robot.png"
  },

  "permissions": ["activeTab", "storage", "scripting"],

  "browser_action": {
    "default_icon": "icons/robot.png",
    "default_title": "Ill Helper",
    "default_popup": "popup/ui.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.worldcat.org/*"],
      "js": ["content_scripts/lender-search.js"]
    }
  ]

}
