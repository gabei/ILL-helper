

{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "An extension to collect the list of possible lenders, compare them to what we know is available, and return the list in a copy-able format.",
  "homepage_url": "https://github.com/gabei/ILL-helper",

  "icons": {
    "48": "icons/robot.png"
  },

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "icons/robot.png",
    "default_title": "Ill Helper",
    "default_popup": "popup/ui.html"
  },

   "web_accessible_resources": [],

  "content_scripts": [
    {
      "matches": ["*://*.worldcat.org/*"],
      "js": ["ill-helper.js"]
    }
  ]
}
